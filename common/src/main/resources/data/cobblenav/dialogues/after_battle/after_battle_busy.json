{
    "initializationAction": [
        "c.npc.set_chatting();",
        "q.player.has_npc_contact(q.npc.class, q.npc.uuid) ? q.dialogue.close();"
    ],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face(false);"
        },
        "pokenav": {
            "name": "PokéNav",
            "face": "q.player.face();"
        }
    },
    "pages": [
        {
            "id": "after-battle",
            "speaker": "npc",
            "lines": [
                "Can't talk now, but let's catch up when I'm free!"
            ],
            "input": [
                "q.player.add_npc_contact(q.npc.class, q.npc.uuid, q.npc.name);",
                "q.dialogue.set_page('pokenav');"
            ]
        },
        {
            "id": "pokenav",
            "speaker": "pokenav",
            "lines": [
                "(Contact added to PokéNav)"
            ],
            "input": "q.dialogue.close();"
        }
    ]
}